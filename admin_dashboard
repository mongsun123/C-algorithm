#include <iostream>;
#include <string>;
#include "../Header Files/property.h";
#include "../Header Files/user.h";

using namespace std;

bool admin_dashboard(){
	User* user_head = new User;
	head = nullptr;
	cout << "-------------ADMIN DASHBOARD-------------" << endl;
	cout << "1. Change User Status (Active and Inactive) " << endl;
	cout << "2. Display Tenants" << endl;
	cout << "3. Display Property" << endl;

	string choice;
	cin >> choice;

	if (choice == "1") {
		string user_id_status_input, user_status_status_input;
		display(user_head);
		cout << "Which user you want to change the status?: ";
		cin >> user_id_status_input;
		cout << "You want change to? (Active or Inactive): ";
		cin >> user_status_status_input;
		if (changeUserStatus(user_head, user_id_status_input, user_status_status_input) == true) {
			cout << "Change Successfully" << endl << endl;
		}
		else if (changeUserStatus(user_head, user_id_status_input, user_status_status_input) == false) {
			cout << "Wrong User ID" << endl << endl;
		}
	}
	else if (choice == "2") {
		displayuser(user_head);
	}
	else if (choice == "3") {
		property* properties = read_csv("c:/users/user/desktop/mudah-apartment-kl-selangor.csv");
		printproperties(properties);
	}
	else {
		cout << "Wrong Input" << endl;
	}
	return true;
}
